@{
    ViewData["Title"] = "Вход";
}
<head>
    <!-- Обязательные метатеги -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
</head>
    
<div>
    <h2 class="display-4">@ViewData["Title"]</h2>
</div>

<form method="post" class="form-signin">
    <input type="text" name="login" id="inputEmail" class="form-control" placeholder="Login" required="" autofocus="">
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Пароль" required="">
    <div class="row">
        <div class="col-12"> <input class="w-100" type="submit" value="Вход" /> </div>
    </div>
</form>
@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <div class="col-12">
        <input class="w-100" type="submit" value="Продолжить как гость"/>
    </div>
}

